{
    "name": "hughcube/qr-data",
    "description": "",
    "license": "MIT",
    "authors": [
        {
            "name": "hugh.li",
            "email": "hugh.li@foxmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "ext-zlib": "*",
        "hughcube/enum": "^1.1",
        "hughcube/base": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "*"
    },
    "autoload": {
        "psr-4": {
            "HughCube\\QrData\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HughCube\\QrData\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --verbose --coverage-clover=coverage.clover",
        "phpstan": "phpstan analyse -vvv",
        "check-style": "phpcs -p --standard=PSR2 src/ -v",
        "fix-style": "phpcbf -p --standard=PSR2 src/ -v"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
